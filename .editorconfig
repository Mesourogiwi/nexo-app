# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[package.json]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[jest.config.js]
indent_size = 2
